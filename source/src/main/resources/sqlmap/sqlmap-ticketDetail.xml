<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="ticket">
	<typeAlias alias="TA-TicketDetail" type="com.ssnn.dujiaok.model.TicketDetailDO"/>

	<resultMap id="RM-TicketDetail" class="TA-TicketDetail" >
		<result property="id" column="ID"/>
		<result property="ticketId" column="TICKET_ID"  />
		<result property="price" column="PRICE" jdbcType="DECIMAL"/>
		<result property="gmtCreate" column="GMT_CREATE" jdbcType="TIMESTAMP"/>
		<result property="gmtStart" column="GMT_START" jdbcType="TIMESTAMP"/>
		<result property="gmtEnd" column="GMT_END" jdbcType="TIMESTAMP"/>
	</resultMap>
	
	<insert id="insertTicketDetail">
		INSERT INTO 
			DJ_TICKET_DETAIL (ID, TICKET_ID , PRICE, GMT_START,GMT_END, GMT_CREATE)
		VALUES 
			(#id#, #ticketId#,#price#, #gmtStart#, #gmtEnd#, now())
		<selectKey resultClass="java.lang.Integer" keyProperty="id">
    		<![CDATA[
				SELECT LAST_INSERT_ID() AS ID
			]]>
		</selectKey>
	</insert>
	
	<select id="queryTicketDetails" resultMap="RM-TicketDetail">
		select * from DJ_TICKET_DETAIL where TICKET_ID = #ticketId#
	</select>
	
	<delete id="deleteTicketDetails">
		delete from DJ_TICKET_DETAIL where TICKET_ID = #ticketId#
	</delete>

</sqlMap>