<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="selfDrive">
	<typeAlias alias="TA-SelfDriveDetail" type="com.ssnn.dujiaok.model.SelfDriveDetailDO"/>

	<resultMap id="RM-SelfDriveDetail" class="TA-SelfDriveDetail" >
		<result property="id" column="ID"/>
		<result property="selfDriveId" column="SELF_DRIVE_ID"  jdbcType="VARCHAR"/>
		<result property="doublePrice" column="DOUBLE_PRICE" jdbcType="DECIMAL"/>
		<result property="singlePrice" column="SINGLE_PRICE" jdbcType="DECIMAL"/>
		<result property="childPrice" column="CHILD_PRICE" jdbcType="DECIMAL"/>
		<result property="gmtCreate" column="GMT_CREATE" jdbcType="TIMESTAMP"/>
		<result property="gmtStart" column="GMT_START" jdbcType="TIMESTAMP"/>
		<result property="gmtEnd" column="GMT_END" jdbcType="TIMESTAMP"/>
	</resultMap>
	
	<insert id="insertSelfDriveDetail">
		INSERT INTO 
			DJ_SELF_DRIVE_DETAIL (ID,SELF_DRIVE_ID,DOUBLE_PRICE,SINGLE_PRICE,CHILD_PRICE,GMT_START,GMT_END,GMT_CREATE)
		VALUES 
			(#id#, #selfDriveId#,#doublePrice#,#singlePrice#,#childPrice#,#gmtStart#, #gmtEnd#, now())
		<selectKey resultClass="java.lang.Integer" keyProperty="id">
    		<![CDATA[
				SELECT LAST_INSERT_ID() AS ID
			]]>
		</selectKey>
	</insert>
	
	<select id="querySelfDriveDetails" resultMap="RM-SelfDriveDetail">
		select * from DJ_SELF_DRIVE_DETAIL where SELF_DRIVE_ID = #selfDriveId#
	</select>
	
	<delete id="deleteSelfDriveDetails">
		delete from DJ_SELF_DRIVE_DETAIL where SELF_DRIVE_ID = #selfDriveId#
	</delete>

</sqlMap>