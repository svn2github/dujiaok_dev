<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="selfDrive">
	<typeAlias alias="TA-SelfDrive" type="com.ssnn.dujiaok.model.SelfDriveDO"/>
	<typeAlias alias="SelfDriveDetail" type="com.ssnn.dujiaok.model.product.detail.SelfDriveDetail"/>
	<typeAlias alias="TA_Product" type="com.ssnn.dujiaok.model.product.Product2"/>

	<resultMap id="RM-SelfDrive" class="TA-SelfDrive" >
		<result property="id" column="ID"/>
		<result property="productId" column="PRODUCT_ID" jdbcType="VARCHAR" />
		<result property="name" column="NAME" jdbcType="VARCHAR"/>
		<result property="addProducts" column="ADD_PRODUCTS" jdbcType="VARCHAR"/>
		<result property="days" column="DAYS" />
		<result property="recommend" column="RECOMMEND" jdbcType="VARCHAR"/>
		<result property="marketPrice" column="MARKET_PRICE" jdbcType="DECIMAL"/>
		<result property="destAddr" column="DEST_ADDR" jdbcType="VARCHAR"/>
		<result property="destProvince" column="DEST_PROVINCE" jdbcType="VARCHAR"/>
		<result property="destCity" column="DEST_CITY" jdbcType="VARCHAR"/>
		<result property="destArea" column="DEST_AREA" jdbcType="VARCHAR"/>
		<result property="locationCode" column="LOCATION_CODE" jdbcType="VARCHAR"/>
		<result property="images" column="IMAGES" jdbcType="VARCHAR"/>
		<result property="payTypes" column="PAY_TYPES" jdbcType="VARCHAR"/>
		<result property="productTypes" column="PRODUCT_TYPES" jdbcType="VARCHAR"/>
		<result property="introduction" column="INTRODUCTION" jdbcType="VARCHAR"/>
		<result property="schedule" column="SCHEDULE" jdbcType="VARCHAR"/>
		<result property="feeDesc" column="FEE_DESC" jdbcType="VARCHAR"/>
		<result property="memo" column="MEMO" jdbcType="VARCHAR"/>
		<result property="gmtCreate" column="GMT_CREATE" jdbcType="TIMESTAMP"/>
		<result property="gmtModified" column="GMT_MODIFIED" jdbcType="TIMESTAMP"/>
		<result property="gmtExpire" column="GMT_EXPIRE" jdbcType="TIMESTAMP"/>
	</resultMap>
	
	<resultMap id="SelfDriveDetail" class="SelfDriveDetail">
	    <result property="id" column="ID" />
	    <result property="singlePrice" column="SINGLE_PRICE" />
	    <result property="doublePrice" column="DOUBLE_PRICE" />
	    <result property="childPrice" column="CHILD_PRICE" />
	    <result property="departDateBegin" column="GMT_START" />
	    <result property="departDateEnd" column="GMT_END" />
	    <result property="journeyDesc" column="SCHEDULE" />
	    <result property="destProvince" column="DEST_PROVINCE" />
	    <result property="destCity" column="DEST_CITY" />
	    <result property="destZone" column="DEST_AREA" />
	    <result property="destLocation" column="DEST_ADDR" />
	</resultMap>

	<insert id="insertSelfDrive">
		INSERT INTO 
			DJ_SELF_DRIVE (ID,PRODUCT_ID,NAME,ADD_PRODUCTS,DAYS,RECOMMEND,MARKET_PRICE,DEST_ADDR,DEST_PROVINCE,DEST_CITY,DEST_AREA,LOCATION_CODE,IMAGES,PAY_TYPES,PRODUCT_TYPES,INTRODUCTION,SCHEDULE,FEE_DESC,MEMO,GMT_CREATE,GMT_MODIFIED,GMT_EXPIRE)
		VALUES 
			(#id#,#productId#,#name#,#addProducts#,#days#,#recommend#,#marketPrice#,#destAddr#, #destProvince#, #destCity#,#destArea#,#locationCode#,#images#,#payTypes#,#productTypes#,#introduction#,#schedule#,#feeDesc#,#memo#,now(),now(),#gmtExpire#)
		<selectKey resultClass="java.lang.Integer" keyProperty="id">
    		<![CDATA[
				SELECT LAST_INSERT_ID() AS ID
			]]>
		</selectKey>
	</insert>
	
	<update id="updateSelfDrive">
		UPDATE DJ_SELF_DRIVE SET 
			NAME = #name# ,
			ADD_PRODUCTS = #addProducts# ,
			DAYS = #days# , 
			RECOMMEND = #recommend# ,
			MARKET_PRICE = #marketPrice# ,
			DEST_ADDR = #destAddr# ,
			DEST_PROVINCE = #destProvince# ,
			DEST_CITY = #destCity# ,
			DEST_AREA = #destArea# ,
			LOCATION_CODE = #locationCode# ,
			IMAGES = #images# ,
			PAY_TYPES = #payTypes# ,
			PRODUCT_TYPES = #productTypes# , 
			INTRODUCTION = #introduction# , 
			SCHEDULE = #schedule# ,
			FEE_DESC = #feeDesc# ,
			MEMO = #memo# ,
			GMT_MODIFIED = now() ,
			GMT_EXPIRE = #gmtExpire#
		WHERE 
			PRODUCT_ID = #productId#
	</update>
	
	<select id="querySelfDrive" resultMap="RM-SelfDrive">
		select * from DJ_SELF_DRIVE where PRODUCT_ID = #productId#
	</select>
	
	<select id="getSelfDriveWithProducts" resultMap="SelfDriveDetail" parameterClass="TA_Product">
        SELECT A.ID, A.GMT_START, A.GMT_END,A.SINGLE_PRICE,A.DOUBLE_PRICE,
		    A.CHILD_PRICE, B.DEST_PROVINCE, B.DEST_CITY, B.DEST_AREA,
		    B.DEST_ADDR,B.SCHEDULE
		  FROM DJ_SELF_DRIVE_DETAIL A,dujiaok_dev.DJ_SELF_DRIVE B
		  WHERE A.SELF_DRIVE_ID=B.PRODUCT_ID AND A.GMT_END>curdate()
		    <isNotNull property="id" prepend="AND">
		      B.PRODUCT_ID=#id#
		    </isNotNull>
		    <isNotNull property="name" prepend="AND">
              B.NAME like '%'||#name#||'%'
            </isNotNull>
            <isNotNull property="series" prepend="AND">
              B.PRODUCT_TYPE like '%'||#series#||'%'
            </isNotNull>
            <isNotNull property="desc" prepend="AND">
              B.INTRODUCTION like '%'||#desc#||'%'
            </isNotNull>
            <isNotNull property="remark" prepend="AND">
              B.MEMO like '%'||#remark#||'%'
            </isNotNull>
    </select>
	
	<select id="querySelfDrives" resultMap="RM-SelfDrive">
		SELECT * FROM DJ_SELF_DRIVE WHERE 1=1 
		<isNotEmpty property="productId" prepend="AND">
			PRODUCT_ID = #productId#
		</isNotEmpty>
		<isNotEmpty property="name" prepend="AND">
			NAME LIKE CONCAT('%', #name#, '%')
		</isNotEmpty>
		<isNotEmpty property="destProvince" prepend="AND">
			DEST_PROVINCE = #destProvince#
		</isNotEmpty>
		<isNotEmpty property="destCity" prepend="AND">
			DEST_CITY = #destCity#
		</isNotEmpty>
		<isNotEmpty property="gmtExpire" prepend="AND">
			<![CDATA[
			GMT_EXPIRE > #gmtExpire#
			]]>
		</isNotEmpty>
		ORDER BY GMT_MODIFIED DESC LIMIT #start# , #size# 
	</select>

	<select id="countSelfDrives" resultClass="Integer">
		SELECT count(*) FROM DJ_SELF_DRIVE WHERE 1=1 
		<isNotEmpty property="productId" prepend="AND">
			PRODUCT_ID = #productId#
		</isNotEmpty>
		<isNotEmpty property="name" prepend="AND">
			NAME LIKE CONCAT('%', #name#, '%')
		</isNotEmpty>
		<isNotEmpty property="destProvince" prepend="AND">
			DEST_PROVINCE = #destProvince#
		</isNotEmpty>
		<isNotEmpty property="destCity" prepend="AND">
			DEST_CITY = #destCity#
		</isNotEmpty>
		<isNotEmpty property="gmtExpire" prepend="AND">
			<![CDATA[
			GMT_EXPIRE > #gmtExpire#
			]]>
		</isNotEmpty>
	</select>

	<delete id="deleteSelfDrive">
		DELETE FROM DJ_SELF_DRIVE WHERE PRODUCT_ID = #productId#
	</delete>
</sqlMap>