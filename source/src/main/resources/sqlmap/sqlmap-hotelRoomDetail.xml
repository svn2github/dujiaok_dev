<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="hotel">
	<typeAlias alias="TA-HotelRoomDetail" type="com.ssnn.dujiaok.model.HotelRoomDetailDO"/>

	<resultMap id="RM-HotelRoomDetail" class="TA-HotelRoomDetail" >
		<result property="id" column="ID"/>
		<result property="roomId" column="ROOM_ID" jdbcType="VARCHAR" />
		<result property="price" column="PRICE" jdbcType="DECIMAL"/>
		<result property="gmtStart" column="GMT_START" jdbcType="TIMESTAMP"/>
		<result property="gmtEnd" column="GMT_END" jdbcType="TIMESTAMP"/>
		<result property="gmtCreate" column="GMT_CREATE" jdbcType="TIMESTAMP"/>		
	</resultMap>
	

	<insert id="insertRoomDetail">
		INSERT INTO 
			DJ_HOTEL_ROOM_DETAIL (ID,ROOM_ID,PRICE,GMT_START,GMT_END,GMT_CREATE)
		VALUES 
			(#id#,#roomId#,#price#,#gmtStart#,#gmtEnd#,now())
		<selectKey resultClass="java.lang.Integer" keyProperty="id">
    		<![CDATA[
				SELECT LAST_INSERT_ID() AS ID
			]]>
		</selectKey>
	</insert>
	
	<select id="queryRoomDetails" resultMap="RM-HotelRoomDetail">
		select * from DJ_HOTEL_ROOM_DETAIL where ROOM_ID = #roomId#
	</select>
	
	<delete id="deleteRoomDetails">
		delete from DJ_HOTEL_ROOM_DETAIL where ROOM_ID = #roomId#
	</delete>
</sqlMap>