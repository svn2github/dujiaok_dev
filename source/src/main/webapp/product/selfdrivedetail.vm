					<iframe id="iframeC" name="iframeC" src="" width="0" height="0" style="display:none;" ></iframe>
					<script type="text/javascript"> 
					function sethash(){
					    hashH = document.documentElement.scrollHeight; 
					    urlC = "http://www.dujiaok.com/diablo/trek/product/product/agent.htm"; 
					    document.getElementById("iframeC").src=urlC+"#"+hashH; 
					}
					window.onload=sethash;
					</script>
            	</div>
            </div>
        </div>
        
        <div class="d_right">
        	<div class="information">
				##set($tehui= $dateList.get(0).doublePrice/2)
            	<h3><i>特惠价</i> ￥<b><span id='tehui'>$!product.cheapestPrice</span></b>元/人起</h3>
                <table>
                	<tr><th>市场价：</th><td>$!product.marketPrice元</td></tr>
                    <tr><th>商品编号：</th><td>$!product.id</td></tr>
                    <tr><th>支付方式：</th><td>$!product.payments</td></tr>
                    <tr><th>产品类别：</th><td>$product.series</td></tr>
                    <tr><th>附加产品：</th><td>#if($product.attachProduct=='') 无 #else $!product.attachProduct #end</td></tr>
                    <tr><th>游玩天数：</th><td>$!product.tourDayNum天</td></tr>
                </table>
            </div>
            <div class="order">
            	<form id="orderForm" method="post" action="${env.root}/order/makeorder.htm">
                	<ul>
                    	<li>游玩日期：
                   	    	<select name="selfDriveId" id="selfDriveId" onchange="changePrice()">
								#foreach($detail in $product.details)
                                  #foreach($departDay in $detail.departDates)
                                    <option value=$detail.id>$departDay</option>
                                  #end
								#end
                  	        </select>
                  	     </li>
                         <li>单人<span id='singlePrice'>$!product.details.get(0).singlePrice</span>元&nbsp;&nbsp;双人<span id='doublePrice'>$!product.details.get(0).doublePrice</span>元&nbsp;&nbsp;#if($product.details.get(0).childPrice!=0)儿童<span id='childPrice'>$!product.details.get(0).childPrice</span> 元#end </li>
                         <li>成人数&nbsp;<input type="text" name="countPerson" id="countPerson">&nbsp;&nbsp;&nbsp;&nbsp;#if($product.details.childPrice!=0)儿童数&nbsp;<input type="text" name="countChild" id="countChild">&nbsp;&nbsp;&nbsp;&nbsp;#else <input type="hidden" id="countChild" value="0"> #end </li>
                    </ul>
                	<button type="submit">&nbsp;&nbsp;&nbsp;</button>
					<input type="hidden" id="productId" name="productId" value="$product.id" />
                </form>
                <p class="F3">拨打电话预定 400 666 5599</p>
            </div>
        </div>
    </div>
</div>    
<!-- 内容结束 -->

<script>
	var selfDriveInfos = [
	  #foreach($tour in $product.details) 
	  	{id: "$!tour.id",
	  	 singlePrice: "$!tour.singlePrice",
	  	 doublePrice: "$!tour.doublePrice",
	  	 childPrice: "$!tour.childPrice",
	  	 comboPrice: "$!tour.comboPrice",
	  	},	
  	  #end
	]
function changePrice(){
    var selfDriveId = document.getElementById('selfDriveId').value;
	var singlePrice = document.getElementById('singlePrice');
    var doublePrice = document.getElementById('doublePrice');
    var childPrice = document.getElementById('childPrice');
    var comboPrice = document.getElementById('comboPrice');
    for (var i = 0; i < tourInfos.length; i++) {
      if (selfDriveId == tourInfos[i].id) {
          singlePrice.innerHTML = tourInfos[i].singlePrice;
          doublePrice.innerHTML = tourInfos[i].doublePrice;
          childPrice.innerHTML = tourInfos[i].childPrice;
          comboPrice.innerHTML = tourInfos[i].comboPrice;
      }
    }
}

</script>

