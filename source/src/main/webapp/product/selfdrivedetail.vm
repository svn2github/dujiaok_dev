    </div>
    
    <div id="detail" class="section">
    	<div class="d_left">
        	<h2 class="d_title">$product.name</h2>
                <div id="Focus">
                    <ul id="Focus_content">
                        #foreach($pictureUrl in $product.pictureUrls)
