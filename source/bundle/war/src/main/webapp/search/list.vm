#set($layout="/front/default_new.vm")
#set($title = $!keyword)

	
<div class="w950 main search">
	<div class="crumb">您搜索的关键词是“<span class="orange">$!keyword</span>”，我们为您找到了<span class="orange">$!totalCount</span>个相关的产品！</div>
	<!-- schL开始 -->
	<div class="L mgr10 searchL">
		<!-- schL1开始 -->
		<div class="schFactor schL1">
			<div class="ttl">
				<strong class="L">搜索 - “$!keyword”</strong>
				<a href="#" class="R">重置筛选条件</a>
			</div>
			<table class="cnt">
				<tr>
					<th>产品类型：</th>
					<td><p>
							<a href="javascript:;" #if($s_product=="")class="current"#end onclick="return G_search('',#JSNULL($s_days),#JSNULL($s_sellPrice),#JSNULL($s_order),#JSNULL($s_orderSeq));">全部</a>
								<a href="javascript:;" onclick="return G_search('MP',#JSNULL($s_days),#JSNULL($s_sellPrice),#JSNULL($s_order),#JSNULL($s_orderSeq));" #if($s_product=="MP")class="current"#end>打折门票</a>
									<a href="javascript:;" onclick="return G_search('ZJ',#JSNULL($s_days),#JSNULL($s_sellPrice),#JSNULL($s_order),#JSNULL($s_orderSeq));" #if($s_product=="ZJ")class="current"#end>周边自驾</a>
										<a href="javascript:;" onclick="return G_search('FJ',#JSNULL($s_days),#JSNULL($s_sellPrice),#JSNULL($s_order),#JSNULL($s_orderSeq));" #if($s_product=="FJ")class="current"#end>酒店房间</a></p></td>
				</tr>
				<!--
				<tr>
					<th>起价范围：</th><td><p><a href="#" class="current">全部</a><a href="#">200以下</a><a href="#">200-499</a><a href="#">500-999</a><a href="#">1000-1499</a><a href="#">1500-1999</a><a href="#">2000及以上</a></p></td>
				</tr>
				-->
				<tr>
					<th>出游天数：</th><td><p><a href="#" #if($days==0)class="current"#end href="javascript:;" onclick="return _search_d();">全部</a><a href="javascript:;" onclick="return _search_d(1);" #if($days==1)class="current"#end>1天</a><a href="javascript:;" onclick="return _search_d(2);" #if($days==2)class="current"#end>2天</a><a href="javascript:;" onclick="return _search_d(3);" #if($days==3)class="current"#end>3天</a><a href="javascript:;" onclick="return _search_d(4);" #if($days==4)class="current"#end>4天</a><a href="javascript:;" onclick="return _search_d(5);" #if($days==5)class="current"#end>5天以上</a></p></td>
				</tr>
				<!--
				<tr>
					<th>优惠方式：</th><td><p><a href="#" class="current">全部</a><a href="#">可用优惠券</a><a href="#">可返奖金</a><a href="#">可用优惠券</a><a href="#">可返奖金</a><a href="#">可用优惠券</a><a href="#">可返奖金</a><a href="#">可用优惠券</a><a href="#">可返奖金</a></p></td>
				</tr>
				-->
			</table>
		</div>
		<!-- schL1结束 -->
		<!-- schL2开始 -->
		
		<div class="mgt10 schOut schL2">
			#if($collectionUtils.isEmpty($result.items))
				很抱歉，没有搜索到与“<span class="orange">$!keyword</span>”相关的产品
			#else
			<div class="ttl">
				<div class="L"><span>排序：</span><a href="#" class="current">推荐</a><a href="#">价格</a></div>
				<div class="R">
					#parse("/common/common_pagination_simple.vm")
				</div>
			</div>
			<ul class="cnt">
				
					#foreach($item in $result.items)
					<li>
    					<div class="L">
    						<a href="${env.root}/product/detail.htm?productId=$!item.productId"><img src="$!item.firstImage" alt="" class="pad3"  onerror="this.src='${env.staticroot}/images/no_img.jpg'"/></a>
    						<span class="txt">
    							<a href="${env.root}/product/detail.htm?productId=$!item.productId" target="_blank"><strong class="t1">#HIGHRIGHT_OUTPUT($!item.name)</strong></a>
    							<span class="t2">区域：$!item.destProvince$!item.destCity$!item.destArea</span>
    							<span class="t2">地址：$!item.destAddr</span>
    						</span>
    					</div>
    					<div class="R">
							
    						<span class="price">
								#if($item.marketPrice)
								<span class="p1">门市价：<span class="through">$!item.marketPrice</span>元</span>
								#end
								#if($item.price)
								<span class="p2"><strong><em>￥</em>$decimalUtils.format($!item.price,"#######0")</strong>起</span>
								#end
    						</span>
							#if($item.price)
    						<a href="${env.root}/product/detail.htm?productId=$!item.productId" class="order">订购</a>
							#end
    					</div>
    				</li>
					#end
				
			</ul>
			#parse("common/common_pagination.vm")
				
			#end
		</div>
		<!-- schL2结束 -->
	</div>
	<!-- schL结束 -->
	<!-- searchR开始 -->
	<div class="R searchR">
		#parse("/search/recommend.vm")
	</div>
	<!-- searchR结束 -->
</div>
</form>
	
<script>
	var toPage = function(pages,size){
		if(isNaN(pages)){
			alert('请输入数字') ;
			return false ;
		}
		var totalPages = $totalPages ;
		if(pages > totalPages){
			pages = totalPages ;
		}
		if(pages < 1){
			pages = 1 ;
		}
        var start = (pages-1) * size + 1;
        document.getElementById('start').value = start ;
        document.getElementById('size').value = size ;
        document.forms[0].submit() ;
    }
</script>